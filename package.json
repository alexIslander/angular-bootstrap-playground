{
  "name": "angular-bootstrap-playground",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest --coverage",
    "build:ci": "ng build --configuration production",
    "test:ci": "jest --ci",
    "watch": "ng build --watch --configuration development",
    "lint": "npm run lint-ts && npm run lint-scss",
    "lint-ts": "ng lint",
    "lint-ts-fix": "ng lint --fix",
    "lint-scss": "stylelint **/*.scss",
    "lint-scss-fix": "stylelint **/*.scss --fix",
    "prod-build-lint": "npm run build:ci && npm run lint-ts && npm run lint-scss && npm run test:ci"
  },
  "lint-staged": {
    "src/**/*.scss": "npm run lint-scss",
    "src/**/*.{ts,scss,html}": [
      "npm run lint-ts",
      "prettier --write"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.1.3",
    "@angular/cli": "^16.1.3",
    "@angular/common": "^16.1.3",
    "@angular/compiler": "^16.1.3",
    "@angular/core": "^16.1.3",
    "@angular/forms": "^16.1.3",
    "@angular/platform-browser": "^16.1.3",
    "@angular/platform-browser-dynamic": "^16.1.3",
    "@angular/router": "^16.1.3",
    "@ng-bootstrap/ng-bootstrap": "^15.0.1",
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.3",
    "@angular-eslint/builder": "16.0.3",
    "@angular-eslint/eslint-plugin": "16.0.3",
    "@angular-eslint/eslint-plugin-template": "16.0.3",
    "@angular-eslint/schematics": "16.0.3",
    "@angular-eslint/template-parser": "16.0.3",
    "@angular/compiler-cli": "^16.1.3",
    "@types/bootstrap": "^5.2.6",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-preset-angular": "^13.1.1",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "prettier-eslint": "^15.0.1",
    "stylelint": "^15.9.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "typescript": "~4.9.4"
  }
}
